{
  "rewrites": [
    { "source": "/sites/:path*", "destination": "/sites/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/sites/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors *"
        },
        {
          "key": "Permissions-Policy",
          "value": "unload=*, autoplay=*, fullscreen=*, geolocation=*, microphone=*, camera=*, payment=*, sync-xhr=*"
        }
      ]
    }
  ]
}
